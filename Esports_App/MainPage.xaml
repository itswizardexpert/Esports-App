<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esports_App.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to our Esports Website!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            
            <Label Text="Username" />
            <Entry Placeholder="Enter your username" x:Name="UsernameEntry" />
            <Label Text="Password" />
            <Entry Placeholder="Enter your password" IsPassword="True" x:Name="PasswordEntry" />

            <Button Text="Create Account" Clicked="OnLoginButtonClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
