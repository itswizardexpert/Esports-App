<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Esports_App.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label
                Text="Please Enter your Name, Phone Number, Discord Id(Username and #), and the Game you want to play"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                FontSize="18"
                HorizontalOptions="Center" />

        <Label Text="Name" />
        <Entry Placeholder="Enter your Name(First And Last Name" x:Name="RealnameEntry" />
        <Label Text="Phone" />
        <Entry Placeholder="Enter your Phone Number" IsPassword="True" x:Name="PhoneEntry" />
        <Label Text="Discord ID" />
        <Entry Placeholder="Enter your Discord username and the #" x:Name="DiscordEntry" />
        <Label Text="Game" />
        <Entry Placeholder="Enter The Game You want to Play" x:Name="GameEntry" />

        <Button Text="Finish" Clicked="OnLoginButtonClicked" />

    </VerticalStackLayout>
</ContentPage>